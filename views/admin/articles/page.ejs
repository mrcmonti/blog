<%- include('../../partials/header.ejs') %>

    <body>
        <%- include('../../partials/homenavbar.ejs') %>
            <div class="container">
                <% result.articles.rows.forEach(article=> { %>
                    <div class="card mt-3">
                        <div class="card-header">
                            <h3><%= article.title %></h3>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                        </div>

                    </div>
                    <% }) %>
                    <div class="row">
                        <div class="col col-12"> 
                            <% if(result.page > 1) { %>
                            <a href="/articles/page/<%= result.page - 1 %>" class="float-left"><<< Prev</a>
                            <% } %>
                            <% if(result.next) { %>
                                <a href="/articles/page/<%= result.page + 1 %>" class="float-right">Next >>></a>
                            <% } %>
                        </div>
                    </div>
            </div>
    </body>
    <%- include('../../partials/footer.ejs') %>